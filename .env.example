# Configuración de la aplicación
SECRET_KEY=clave-secreta-produccion-minimo-32-caracteres
FLASK_ENV=production

# MongoDB (en Docker, MONGODB_HOST=mongo es definido por docker-compose)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=inventory_db

# Email (Flask-Mail) - Configurar para producción
# Para Gmail: usar "Contraseñas de aplicaciones" en https://myaccount.google.com/security
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=xxxx-xxxx-xxxx-xxxx
MAIL_DEFAULT_SENDER=Puerto Distribucion <tu-email@gmail.com>

# Shopify API - Client Credentials Grant
# Obtener de Dev Dashboard: dev.shopify.com → App → Settings
SHOPIFY_STORE_DOMAIN=tu-tienda.myshopify.com
SHOPIFY_CLIENT_ID=tu-client-id
SHOPIFY_CLIENT_SECRET=shpss_tu-client-secret
